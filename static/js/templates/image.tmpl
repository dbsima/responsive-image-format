<div class="panel panel-default">
    <div class="panel-body">
        <div class="form-inline">
            <a type="submit" class="btn btn-primary" id="btnApply" data-id="<%= id %>" data-width="<%= size.width %>" data-height="<%= size.height %>" role="button">Apply</a>
            <a type="submit" class="btn btn-default" id="btnSelect" data-id="<%= id %>" href="/select/<%= id %>" role="button">Select</a>
            <a type="submit" class="btn btn-danger" id="openSmartShape">Add smart shape</a>
        </div>
    </div>
</div>
<div class="kinetic-container" id="container"></div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Adjust image to compose</h4>
            </div>
                <div class="modal-body">
                <div class="kinetic-container" id="container3"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>