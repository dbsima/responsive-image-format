<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <img src="../files/<%= id %><%= type %>" alt="<%= id %>.png" height=100 width=auto>
        <div class="caption">
            <h3>Thumbnail label</h3>
            <p>...</p>
            <p>
                <a href="/edit/<%= id %>" class="btn btn-primary" id="btnEditFile" data-id="<%= id %>.png" role="button">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>
                <a href="#" class="btn btn-danger" id="btnDeleteFile" data-id="<%= id %><%= type %>" role="button">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </p>
        </div>
    </div>
</div>